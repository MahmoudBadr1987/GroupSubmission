<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
<main class = "container">
  <div class="row">
    <h1> <%= title %> </h1>
  </div>

    <form class="form-group" method="post">

      <div class="form-group">
        <input type="hidden" name="id" value="<%= contact._id %>">
      </div>

      <div class="form-group">
       <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Jane Doe" name="name"  value ="<%= contact.name %>" required>
      </div>
 
      <div class="form-group">
       <label for="qualifications">Qualifications</label>
        <input type="text" class="form-control" id="qualifications" placeholder="Health Care Sector" name="qualifications"  value ="<%= contact.qualifications %>" required>
      </div>

      <div class="form-group">
        <label for="contact_number">Contact Number</label>
        <input type="Number" class="form-control" id="contact_number" placeholder="123456789" name="contact_number" value ="<%= contact.contact_number %>" required>
      </div>
  
      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" placeholder="Enter an email" name="email" value ="<%= contact.email %>" required>
      <br>
      <br>
      </div>
  
      <button class="btn btn-primary" type="submit"><i class="fa-solid fa-edit"></i>Submit</button>
      <button class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</button>
      <a href ="/provider" class="btn btn-warning"><i class="fa-solid fa-arrow-right-from-bracket"></i> Exit</a>
      
    </form>


  
</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>